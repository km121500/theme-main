<div class="container">
    <p class="text-success"><%= flash[:notice]%></p>
    <div class=""><h3 style="background-color:rgba(107,90,105,0.1);">編集</h3></div>
    
    <div class ="mx-auto row-md-12">
        <%= form_with model:@list, url:list_path(@list),local:true do |f| %>
        <div class="col-md-5">
                        <label for="name" class="mt-5">タイトル</label>
                        <%= f.text_field :name, class: "form-control mx-5" %>
                        <label for="body" class="mt-5">説明</label>
                        <%= f.text_area :body, class: "form-control mx-5" %>
        </div>
        <div class="col-md-5">
                        <label class="mt-5">ジャンル</label>
                           <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class:"form-control" %>
                         <div class="mt-5" id="star">
                           <%= f.label :rate,'評価 :', class:"1" %>
                           <%= f.hidden_field :rate, id: :review_star %>
                         </div>
                         <script>
                         $('#star').raty({
                           size     : 36,
                           starOff:  '<%= asset_path('star-off.png') %>',
                           starOn : '<%= asset_path('star-on.png') %>',
                           starHalf: '<%= asset_path('star-half.png') %>',
                           scoreName: 'list[rate]',
                           half: true,
                         });
                         </script>
                         <%= f.submit '新規登録', class: "btn btn-success mt-5" %>
       </div>
      <% end %>
    </div>
</div>