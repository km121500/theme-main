<div class="container">

  <div class="row mt-5">
      <p class="text-success"><%= flash[:notice]%></p>
      <h3 class = "admin-customers-index" style="background-color:rgba(107,90,105,0.1);">ジャンル一覧・追加</h3>
    </div>  
    <div class = "row m-5">
      <%= form_with model:@genre, url:genres_path,local:true do |f| %>
      <div class="form-group form-inline">
      <label for="genre_name">ジャンル名</label>
        <%= f.text_field :name, class: "form-control mx-5" %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>

  <div class="container">
      <div class="row-md-5 mt-5">
        <div class="col-4">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_genre_path(genre), class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", genre_path(genre),method: :delete, class: "btn btn-sm btn-danger ml-2" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to ">>>>リスト一覧へ", lists_path, class: "d-block mt-4 mb-5" %>
    </div>
  </div>
</div>